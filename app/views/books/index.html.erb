<div class="list-item">
  <div class="bottom-link">
    <%= link_to 'Novo livro', new_book_path %>
  </div>
  <div class="ui cards">
    <% @books.each do |book| %>
      <div class="ui card">
        <div class="image">
            <%= image_tag book.picture.thumb.url %>
        </div>
        <div class="content">
          <a class="header"><%= book.title %></a>
          <div class="meta">
            <span class="date"><%= book.isbn %></span>
          </div>
          <div class="description">
            <%= book.author %>
          </div>
        </div>
        <div class="extra content">
          <div class="ui two buttons">
            <%= link_to 'Editar', edit_book_path(book), class: 'ui basic blue button' %>
            <%= link_to 'Remover', book_path(book), method: :delete, class: 'ui basic red button' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="top">
    <%= paginate @books %>
    <%= page_entries_info @books %>
  </div>
</div>
