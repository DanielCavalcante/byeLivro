<div class="col-md-12 centered">
  <% if !flash[:notice].blank? %>
    <div class="row">
      <div class="col-md-6 centered">
        <div class="alert alert-info alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:notice] %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-offset-2">
      <%= link_to 'Novo livro', new_book_path, class: 'btn btn-link' %>
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-4 col-md-3">
            <div class="thumbnail">
              <%= image_tag book.picture.thumb.url %>
              <div class="caption">
                <div style="text-align: center;">
                  <h5><%= book.title %></h5>
                  <p>Autor: <%= book.author %></p>
                  <p>ISBN: <%= book.isbn %>
                  <div class="row">
                    <%= link_to 'Editar', edit_book_path(book), class:"btn btn-primary" %>
                    <%= link_to 'Remover', book_path(book), method: :delete, class:"btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
